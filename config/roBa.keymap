#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&trackball {
    automouse-layer = <4>;
    scroll-layers = <5>;

    // arrows {
    //     layers = <3>;
    //     bindings =
    //         <&kp RIGHT_ARROW>,
    //         <&kp LEFT_ARROW>,
    //         <&kp UP_ARROW>,
    //         <&kp DOWN_ARROW>;
    //     tick = <10>;
    //     wait-ms = <5>;
    //     tap-ms = <5>;
    // };
};

/ {
    combos {
        compatible = "zmk,combos";

        Muhenkan {
            bindings = <&to_layer_0 INT_MUHENKAN>;
            key-positions = <12 13>;
        };

        Kana {
            bindings = <&to_layer_0 INT_KANA>;
            key-positions = <19 18>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        td_home_end: td_home_end {
            compatible = "zmk,behavior-tap-dance";
            label = "HOME_END";
            #binding-cells = <0>;
            bindings = <&kp HOME>, <&kp END>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q             &lt 5 L       &kp U           &kp COMMA         &kp PERIOD                                             &kp F        &kp W              &kp R            &lt 5 Y      &kp P
&mt LCTRL E       &mt LCTRL I   &mt LEFT_ALT A  &mt LEFT_SHIFT O  &kp MINUS    &kp ESC                 &kp TAB           &kp K        &mt RIGHT_SHIFT T  &mt RIGHT_ALT N  &mt RCTRL S  &mt RCTRL H
&kp Z             &kp X         &kp C           &kp V             &kp SLASH    &kp HOME                &kp END           &kp G        &kp D              &kp M            &kp J        &kp B
&kp LEFT_CONTROL  &kp LEFT_WIN  &kp LEFT_ALT    &lt 2 BACKSPACE   &lt 1 SPACE  &lt 3 INT_MUHENKAN      &lt 2 INT_HENKAN  &lt 1 ENTER                                                   &kp DEL
            >;
        };

        SYMBOL {
            bindings = <
&kp AT_SIGN   &kp GRAVE            &kp QUESTION       &kp EXCLAMATION       &none                                           &kp BACKSLASH  &kp LEFT_BRACE                   &kp RIGHT_BRACE                  &kp LESS_THAN        &kp GREATER_THAN
&kp ASTERISK  &mt RCTRL AMPERSAND  &mt LEFT_ALT PIPE  &mt LEFT_SHIFT EQUAL  &kp UNDERSCORE  &trans                  &trans  &kp SLASH      &mt LEFT_SHIFT LEFT_PARENTHESIS  &mt RIGHT_ALT RIGHT_PARENTHESIS  &mt LCTRL SEMICOLON  &kp COLON
&kp PLUS      &kp CARET            &kp TILDE          &kp DOLLAR            &kp PERCENT     &trans                  &trans  &kp HASH       &kp LEFT_BRACKET                 &kp RIGHT_BRACKET                &kp SINGLE_QUOTE     &kp DOUBLE_QUOTES
&trans        &trans               &trans             &trans                &trans          &lt 6 INT_MUHENKAN      &trans  &trans                                                                                                &trans
            >;
        };

        ARROW_NUM {
            bindings = <
&kp ESCAPE  &kp HOME        &kp UP_ARROW    &kp END          &trans                      &trans               &kp NUMBER_7             &kp NUMBER_8            &kp NUMBER_9        &kp SLASH
&kp LGUI    &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &trans  &trans      &trans  &mt COMMA RIGHT_GUI  &mt LEFT_SHIFT NUMBER_4  &mt RIGHT_ALT NUMBER_5  &mt RCTRL NUMBER_6  &mt COLON RCTRL
&trans      &trans          &trans          &trans           &trans  &trans      &trans  &kp NUMBER_0         &kp NUMBER_1             &kp NUMBER_2            &kp NUMBER_3        &kp PERIOD
&trans      &trans          &trans          &trans           &trans  &trans      &trans  &trans                                                                                    &trans
            >;
        };

        FUNCTION {
            bindings = <
&trans  &trans  &trans  &trans  &trans                           &none   &kp F9  &kp F10  &kp F11  &kp F12
&trans  &trans  &trans  &trans  &trans       &trans      &trans  &none   &kp F5  &kp F6   &kp F7   &kp F8
&trans  &trans  &trans  &trans  &trans       &trans      &trans  &none   &kp F1  &kp F2   &kp F3   &kp F4
&tog 7  &trans  &trans  &trans  &lt 6 SPACE  &trans      &trans  &trans                            &trans
            >;
        };

        MOUSE {
            bindings = <
&to_layer_0 Q      &lt_to_layer_0 5 L    &mkp MB4              &mkp MB5                    &to_layer_0 DOT                                                                         &to_layer_0 F           &mkp MB4       &mkp MB5       &lt_to_layer_0 5 Y  &to_layer_0 P
&trans             &mkp MB2              &mkp MB3              &mkp MB1                    &to_layer_0 MINUS       &to_layer_0 ESCAPE                 &to_layer_0 TAB              &to_layer_0 K           &mkp MB1       &mkp MB3       &mkp MB2            &trans
&to_layer_0 Z      &to_layer_0 X         &to_layer_0 C         &to_layer_0 V               &to_layer_0 SLASH       &to_layer_0 HOME                   &to_layer_0 END              &to_layer_0 G           &to_layer_0 D  &to_layer_0 M  &to_layer_0 J       &to_layer_0 B
&to_layer_0 LCTRL  &to_layer_0 LEFT_GUI  &to_layer_0 LEFT_ALT  &lt_to_layer_0 2 BACKSPACE  &lt_to_layer_0 1 SPACE  &lt_to_layer_0 3 INT_MUHENKAN      &lt_to_layer_0 2 INT_HENKAN  &lt_to_layer_0 1 ENTER                                                    &to_layer_0 DELETE
            >;
        };

        SCROLL {
            bindings = <
&trans  &trans     &trans  &trans      &trans                      &trans  &trans  &trans  &trans  &trans
&trans  &kp LCTRL  &trans  &kp LSHIFT  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans     &trans  &trans      &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans     &trans  &trans      &trans  &trans      &trans  &trans                          &trans
            >;
        };

        BT_CONFIG {
            bindings = <
&none  &none  &none  &none   &none                            &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&none  &none  &none  &none   &none   &none       &none        &none         &none         &none         &none         &none
&none  &none  &none  &none   &none   &none       &bootloader  &none         &none         &none         &none         &bt BT_CLR
&none  &none  &none  &trans  &trans  &trans      &trans       &trans                                                  &bt BT_CLR_ALL
            >;
        };

        WASD {
            bindings = <
&kp ESC         &kp Q   &kp W   &kp E          &kp R                                    &none   &none  &none  &none  &none
&kp LEFT_SHIFT  &kp A   &kp S   &kp D          &kp F      &none                 &trans  &none   &none  &none  &none  &none
&kp LCTRL       &kp Z   &kp X   &kp C          &kp V      &kp END               &trans  &none   &none  &none  &none  &none
&tog 7          &trans  &trans  &kp BACKSPACE  &kp SPACE  &kp INT_MUHENKAN      &trans  &trans                       &tog 7
            >;
        };
    };
};
